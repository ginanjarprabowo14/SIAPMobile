<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnDismissDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorText"
            android:clickable="true">

            <ImageView
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:src="@drawable/ic_close_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:text="Dismiss"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSelesaiDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorAgree">

            <ImageView
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:src="@drawable/ic_done_all_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:text="Selesai"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="33dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorText4"
            android:textSize="11sp"
            android:text="Nomor Tiket"/>

        <TextView
            android:id="@+id/txtnoTiketz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:text="ticket098712"/>

        <TextView
            android:id="@+id/labelStatusAduan"
            android:layout_width="176dp"
            android:layout_height="18dp"
            android:layout_gravity="start"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape4"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="2dp"
            android:text="Status : Belum Diterima SKPD"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:textColor="@color/colorText4"
            android:fontFamily="sans-serif-medium"
            android:textSize="10sp"
            android:text="Jawaban"/>

        <TextView
            android:id="@+id/txtJawabanTiket"
            android:layout_width="200dp"
            android:layout_marginTop="18dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorText4"
            android:textSize="10sp"
            android:text="Belum ada jawaban dari pihak terkait."/>




    </LinearLayout>

</RelativeLayout>