<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color1</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="actionMenuTextColor">@color/colorText</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionMenuTextColor">@color/colorText</item>
        <item name="elevation">0dp</item>
        <item name="checkboxStyle">@style/MyCheckBoxStyle</item>
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@drawable/my_compound_button_color_selector</item>
        <item name="buttonTint">@drawable/my_compound_button_color_selector</item>
    </style>

    <style name="AppTheme.NoActionBars">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:alpha">0.7</item>
        <item name="tabSelectedTextColor">@color/colorSelect</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12.5sp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textColor">@color/colorUnselect</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ItemTextAppearanceRelease">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:padding">6dp</item>
        <item name="android:width">220dp</item>
        <item name="android:height">400dp</item>

    </style>

    <style name="ItemTextAppearanceReleases" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/set_dialog_out_side</item>
        <item name="android:windowExitAnimation">@anim/set_dialog_in_side</item>
    </style>

</resources>
